<!--        <servlet-class>com.nhnacademy.hello.servlet.RequestServlet</servlet-class>-->
<!--    </servlet>-->

    <!--    filter-->

    <!--    방문수 저장 파일 위치-->
    <context-param>
        <param-name>counterFileName</param-name>
        <param-value>counter.dat</param-value>
    </context-param>

    <!--    에러페이지-->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
